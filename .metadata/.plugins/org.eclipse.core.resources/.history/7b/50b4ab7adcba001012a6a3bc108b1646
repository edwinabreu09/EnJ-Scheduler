        <version>3.3.2</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <java.version>17</java.version>
    </properties>

    <repositories>
        <!-- Microsoft JDBC driver repository -->
        <repository>
            <id>microsoft</id>
