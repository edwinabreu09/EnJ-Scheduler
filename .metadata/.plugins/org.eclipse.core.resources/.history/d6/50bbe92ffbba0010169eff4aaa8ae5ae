package controller;

import dao.PatientRepository;
import dto.PatientDTO;
import model.Patient;
import org.springframework.web.bind.annotation.*;

import java.util.List;
import java.util.stream.Collectors;

@RestController
@CrossOrigin(origins = "http://localhost:3000")
@RequestMapping("/api/patients")
public class PatientController {

    private final PatientRepository patientRepository;

    public PatientController(PatientRepository patientRepository) {
        this.patientRepository = patientRepository;
    }

    // ------------------ GET all patients ------------------
    @GetMapping
    public List<PatientDTO> getAllPatients() {
        return patientRepository.findAll()
                .stream()
                .map(p -> new PatientDTO(p.getId(), p.getFirstName(), p.getLastName()))
                .collect(Collectors.toList());
    }

    // ------------------ GET single patient ------------------
    @GetMapping("/{id}")
    public PatientDTO getPatientById(@PathVariable Integer id) {
        return patientRepository.findById(id)
                .map(p -> new PatientDTO(p.getId(), p.getFirstName(), p.getLastName()))
                .orElse(null);
    }

    // ------------------ CREATE patient ------------------
    @PostMapping
    public PatientDTO addPatient(@RequestBody PatientDTO dto) {
        Patient patient = new Patient();
        patient.setFirstName(dto.getFirstName());
        patient.setLastName(dto.getLastName());
        Patient saved = patientRepository.save(patient);
        return new PatientDTO(saved.getId(), saved.getFirstName(), saved.getLastName());
    }

    // ------------------ UPDATE patient ------------------
    @PutMapping("/{id}")
    public PatientDTO updatePatient(@PathVariable Integer id, @RequestBody PatientDTO dto) {
        return patientRepository.findById(id).map(patient -> {
            patient.setFirstName(dto.getFirstName());
            patient.setLastName(dto.getLastName());
            Patient updated = patientRepository.save(patient);
            return new PatientDTO(updated.getId(), updated.getFirstName(), updated.getLastName());
        }).orElseGet(() -> {
            Patient newPatient = new Patient();
            newPatient.setId(id);
            newPatient.setFirstName(dto.getFirstName());
            newPatient.setLastName(dto.getLastName());
            Patient saved = patientRepository.save(newPatient);
            return new PatientDTO(saved.getId(), saved.getFirstName(), saved.getLastName());
        });
    }

    // ------------------ DELETE patient ------------------
    @DeleteMapping("/{id}")
    public void deletePatient(@PathVariable Integer id) {
        patientRepository.deleteById(id);
    }
}
