package mainPackage.model;

import jakarta.persistence.*;

import java.time.LocalTime;

@Entity
@Table(name = "Schedule") // Make sure this matches your table name in SQL Server
public class Schedule {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Integer id;

    private String day;

    @Column(name = "PatientID") // Match the exact column name in the database
    private Integer patientId;

    @Column(name = "PhysicianID") // Match the exact column name in the database
    private Integer physicianId;

    private LocalTime time;

    // Constructors
    public Schedule() {}

    public Schedule(String day, Integer patientId, Integer physicianId, LocalTime time) {
        this.day = day;
        this.patientId = patientId;
        this.physicianId = physicianId;
        this.time = time;
    }

    // Getters and setters
    public Integer getId() {
        return id;
    }

    public void setId(Integer id) {
        this.id = id;
    }

    public String getDay() {
        return day;
    }

    public void setDay(String day) {
        this.day = day;
    }

    public Integer getPatientId() {
        return patientId;
    }

    public void setPatientId(Integer patientId) {
        this.patientId = patientId;
    }

    public Integer getPhysicianId() {
        return physicianId;
    }

    public void setPhysicianId(Integer physicianId) {
        this.physicianId = physicianId;
    }

    public LocalTime getTime() {
        return time;
    }

    public void setTime(LocalTime time) {
        this.time = time;
    }
}
